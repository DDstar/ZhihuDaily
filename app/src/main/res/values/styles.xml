<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--ViewStyle-->
    <style name="frescoViewStyle">
        <item name="placeholderImage">@mipmap/image_placeholder</item>
        <item name="placeholderImageScaleType">fitCenter</item>
        <item name="progressBarAutoRotateInterval">5000</item>
        <item name="progressBarImage">@mipmap/image_progress</item>
        <item name="progressBarImageScaleType">centerInside</item>
        <item name="fadeDuration">5000</item>
    </style>

</resources>
